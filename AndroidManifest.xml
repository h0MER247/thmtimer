<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.thm.mni.thmtimer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.thm.mni.thmtimer.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.thm.mni.thmtimer.ModuleListActivity"
            android:label="@string/my_modules" >
        </activity>
        <activity
            android:name="de.thm.mni.thmtimer.EnterModuleActivity"
            android:label="@string/enter_module" >
        </activity>
        <activity
            android:name="de.thm.mni.thmtimer.TimeTrackingActivity"
            android:label="@string/my_modules" >
        </activity>
        <activity
            android:name="de.thm.mni.thmtimer.TrackTimeActivity"
            android:label="@string/my_modules" >
        </activity>
        <activity
            android:name="de.thm.mni.thmtimer.TeacherCourseDetailActivity"
            android:label="@string/course_details" >
        </activity>

        <uses-library android:name="android.test.runner" />
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="THM Timer Test"
        android:targetPackage="de.thm.mni.thmtimer" />

</manifest>