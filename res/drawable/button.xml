<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="7dip" />
             <stroke android:width="1dip" android:color="#888888" />
             <gradient  android:angle="-90"  android:startColor="#989898" android:endColor="#cbcbcb"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="7dip" />
             <stroke android:width="1dip" android:color="#b7b9ac" />
             <solid  android:color="#cbcbcb"/>       
         </shape>
     </item>	
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="7dip" />
             <stroke android:width="1dip" android:color="#DDDDDD" />
             <gradient  android:angle="-90"  android:startColor="#fefefe" android:endColor="#cbcbcb" />            
         </shape>
     </item>
</selector> 